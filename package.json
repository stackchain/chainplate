{
  "name": "chainplate",
  "version": "1.0.0",
  "description": "Component and template manager for reactstrap",
  "main": "lib/index.js",
  "scripts": {
    "test": "cross-env BABEL_ENV=test react-scripts test --env=jsdom",
    "report-coverage": "coveralls < ./coverage/lcov.info",
    "cover": "npm test -- --coverage",
    "build": "rollup -c .rolluprc.js",
    "dev": "rollup -c .rolluprc.js",
    "watch": "chokidar 'src/**' -c 'npm run prebuild && npm run lint && npm run cover && npm run dev'",
    "prebuild": "cross-env BABEL_ENV=lib-dir babel src --out-dir lib",
    "server": "browser-sync start --files 'dist/*, index.html' --server",
    "lint": "eslint ./src"
  },
  "homepage": "https://chainplate.github.io/chainplate",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/stackchain/chainplate.git"
  },
  "files": [
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "lib",
    "dist",
    "src"
  ],
  "keywords": [
    "react",
    "component",
    "components",
    "react-component",
    "reactstrap-component",
    "bootstrap"
  ],
  "author": "Juliano Lazzarotto aka stackchain",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^23.0.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "browser-sync": "^2.24.6",
    "chokidar": "^2.0.4",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^3.0.1",
    "cross-env": "^5.2.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.9.1",
    "jest": "^23.1.0",
    "postcss-modules": "^1.3.2",
    "react-scripts": "^1.1.4",
    "react-test-renderer": "^16.4.1",
    "rollup": "^0.60.7",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-postcss": "^1.6.2"
  },
  "dependencies": {
    "bootstrap": "^4.1.1",
    "jquery": "^3.3.1",
    "preact": "^8.2.9",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-popper": "^1.0.0",
    "react-redux": "^5.0.7",
    "react-transition-group": "^2.3.1",
    "reactstrap": "^6.1.0",
    "classnames": "^2.2.6"
  }
}
